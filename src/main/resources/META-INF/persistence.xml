<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa.wmbrod">
        <class>com.enigma.jpa_wmbrod.entity.Customer</class>
        <class>com.enigma.jpa_wmbrod.entity.Menu</class>
        <class>com.enigma.jpa_wmbrod.entity.MenuPrice</class>
        <class>com.enigma.jpa_wmbrod.entity.TableMenu</class>
        <class>com.enigma.jpa_wmbrod.entity.TransType</class>
        <class>com.enigma.jpa_wmbrod.entity.Bill</class>
        <class>com.enigma.jpa_wmbrod.entity.BillDetail</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/wmbrod" />
            <property name="jakarta.persistence.jdbc.user" value="alvindo" />
            <property name="jakarta.persistence.jdbc.password" value="24062000" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />

        </properties>


    </persistence-unit>

</persistence>