<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa.wmbrod">
        <class>com.enigma.jpa_wmbrod.entity.Category</class>
        <class>com.enigma.jpa_wmbrod.entity.Customer</class>
        <class>com.enigma.jpa_wmbrod.entity.Menu</class>
        <class>com.enigma.jpa_wmbrod.entity.MenuPrice</class>
        <class>com.enigma.jpa_wmbrod.entity.Menu</class>
        <class>com.enigma.jpa_wmbrod.entity.Customer</class>
        <class>com.enigma.jpa_wmbrod.entity.MCustomerDiscount</class>
        <class>com.enigma.jpa_wmbrod.entity.MDiscount</class>
        <class>com.enigma.jpa_wmbrod.entity.Menu</class>
        <class>com.enigma.jpa_wmbrod.entity.MenuPrice</class>
        <class>com.enigma.jpa_wmbrod.entity.MTable</class>
        <class>com.enigma.jpa_wmbrod.entity.TransType</class>
        <class>com.enigma.jpa_wmbrod.entity.Bill</class>
        <class>com.enigma.jpa_wmbrod.entity.BillDetail</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/wmbrod" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="root" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
            <property name="toplink.jdbc.url" value="jdbc:postgresql://localhost:5432/wmbrod"/>
            <property name="toplink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="toplink.jdbc.user" value="postgres"/>
            <property name="toplink.jdbc.password" value="root"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/wmbrod"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="openjpa.ConnectionURL" value="jdbc:postgresql://localhost:5432/wmbrod"/>
            <property name="openjpa.ConnectionDriverName" value="org.postgresql.Driver"/>
            <property name="openjpa.ConnectionUserName" value="postgres"/>
            <property name="openjpa.ConnectionPassword" value="root"/>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://localhost:5432/wmbrod"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.user" value="postgres"/>
            <property name="eclipselink.jdbc.password" value="root"/>


        </properties>


    </persistence-unit>

</persistence>