<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jpa.wmbrod">
        <class>com.enigma.jpa_wmbrod.entity.MCustomer</class>
        <class>com.enigma.jpa_wmbrod.entity.MCustomerDiscount</class>
        <class>com.enigma.jpa_wmbrod.entity.MDiscount</class>
        <class>com.enigma.jpa_wmbrod.entity.MMenu</class>
        <class>com.enigma.jpa_wmbrod.entity.MMenuPrice</class>
        <class>com.enigma.jpa_wmbrod.entity.MTable</class>
        <class>com.enigma.jpa_wmbrod.entity.MTransType</class>
        <class>com.enigma.jpa_wmbrod.entity.TBill</class>
        <class>com.enigma.jpa_wmbrod.entity.TBillDetail</class>

        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/wmbrod" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="root" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />

        </properties>


    </persistence-unit>

</persistence>